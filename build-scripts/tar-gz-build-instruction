rm -f $(find . -name "*~") &&
./bootstrap && 
./configure \
--with-pgsql-lib=/opt/postgresql/lib --with-pgsql-includes=/opt/postgresql/include \
--with-modules="mydns gmysql mongodb lua gpgsql xdb pipe oracle pipe pdns db2 odbc ldap gsqlite gsqlite3 geo goracle opendbx godbc" \
--with-dynmodules="" &&
make dist 