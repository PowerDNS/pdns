              <listitem>
                <para>
                  Password to connect with
                </para>
              </listitem>
            </varlistentry>
            <varlistentry>
              <term>pdns-socket</term>
              <listitem>
                <para>
                  MySQL socket to use for connecting
                </para>
              </listitem>
            </varlistentry>
