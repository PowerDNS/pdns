start_master ()
{
	case $context in
			bind*)
				source ../regression-tests/backends/bind-master
				;;
			geoip*)
				source ../regression-tests/backends/geoip-master
				;;
			gmysql*)
				source ../regression-tests/backends/gmysql-master
				;;

			godbc_mssql*)
				[ -z $GODBC_MSSQL_DSN ] && echo '$GODBC_MSSQL_DSN must be set' >&2 && exit 1
				[ -z $GODBC_MSSQL_USERNAME ] && echo '$GODBC_MSSQL_USERNAME must be set' >&2 && exit 1
				[ -z $GODBC_MSSQL_PASSWORD ] && echo '$GODBC_MSSQL_PASSWORD must be set' >&2 && exit 1
				source ../regression-tests/backends/godbc_mssql-master
				;;

			godbc_sqlite3*)
				[ -z $GODBC_SQLITE3_DSN ] && echo '$GODBC_SQLITE3_DSN must be set' >&2 && exit 1
				source ../regression-tests/backends/godbc_sqlite3-master
				;;

			gpgsql*)
				source ../regression-tests/backends/gpgsql-master
				;;

			gsqlite3*)
				source ../regression-tests/backends/gsqlite3-master
				;;

			lmdb*)
				source ../regression-tests/backends/lmdb-master
				;;

			remote*)
				source ../regression-tests/backends/remote-master
				;;

			tinydns*)
				source ../regression-tests/backends/tinydns-master
				;;

			ldap*)
				source ../regression-tests/backends/ldap-master
				;;

			lua2*)
				source ../regression-tests/backends/lua2-master
				;;

			ext-nsd*)
				source ../regression-tests/ext/nsd-master
				;;

			ext-bind*)
				source ../regression-tests/ext/bind-master
				;;

			*)
				nocontext=yes
	esac

	if [ "$nocontext" == "yes" ]
	then
		echo unknown context $context
		: > passed_tests
		echo 'unknown-context-'"$context" > failed_tests
		../regression-tests/toxml $context
		exit
	fi
}

start_slave ()
{
	skipreasons="$skipreasons presigned nodyndns"

	case $presignedcontext in
		bind*)
			source ../regression-tests/backends/bind-slave
			;;

		gmysql*)
			source ../regression-tests/backends/gmysql-slave
			;;

		godbc_mssql*)
			[ -z $GODBC_MSSQL2_DSN ] && echo '$GODBC_MSSQL2_DSN must be set' >&2 && exit 1
			[ -z $GODBC_MSSQL2_USERNAME ] && echo '$GODBC_MSSQL2_USERNAME must be set' >&2 && exit 1
			[ -z $GODBC_MSSQL2_PASSWORD ] && echo '$GODBC_MSSQL2_PASSWORD must be set' >&2 && exit 1
			source ../regression-tests/backends/godbc_mssql-slave
			;;

		gpgsql*)
		source ../regression-tests/backends/gpgsql-slave
			;;

		gsqlite3*)
			source ../regression-tests/backends/gsqlite3-slave
			;;

		lmdb*)
			source ../regression-tests/backends/lmdb-slave
			;;

		ext-bind*)
			source ../regression-tests/ext/bind-slave
			;;

		ext-nsd*)
			source ../regression-tests/ext/nsd-slave
			;;

		*)
			nocontext=yes
	esac

	if [ "$nocontext" == "yes" ]
	then
		echo unknown presigned context $presignedcontext
		: > passed_tests
		echo 'unknown-presigned-context-'"$presignedcontext" > failed_tests
		../regression-tests/toxml $context
		exit
	fi
}
